= form_for(@product) do |f|
  - if @product.errors.any?
    #error_explanation
      %h2
        = pluralize(@product.errors.count, "error")
        prohibited this product from being saved:
      %ul
        - @product.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :weight
    %br/
    = f.text_field :weight
  .field
    = f.label :price
    %br/
    = f.text_field :price
  .field
    = f.label :image
    %br/
    = f.file_field :image 
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .field
    = f.label :Please_select_category
    %br/
    = f.select :category_ids, options_for_select(@categories.collect{|c| [c.name, c.id] }),  {}, {:multiple => true} 
  .field
    = f.label :Tag_list
    %br/
    = f.select :tag_list_ids, @tags.collect{|c| [c.name, c.id] },  {}, {:multiple => true} 
  .actions
    = f.submit
   
