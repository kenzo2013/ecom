= form_for(@product) do |f|
  - if @product.errors.any?
    #error_explanation
      %h2
        = pluralize(@product.errors.count, "error")
        prohibited this product from being saved:
      %ul
        - @product.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :weight
    %br/
    = f.text_field :weight
  .field
    = f.label :price
    %br/
    = f.text_field :price
  .field
    = f.label :image
    %br/
    = f.file_field :image 
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .field
    = f.label :category
    %br/
    = f.select :category_id, @categories.collect{|c| [c.name, c.id] }, :prompt => 'Select category'
  .field
    = f.label :tag_1
    %br/
    = f.text_field :tag_1
  .field
    = f.label :tag_2
    %br/
    = f.text_field :tag_2
  .field
    = f.label :tag_3
    %br/
    = f.text_field :tag_3
  .actions
    = f.submit
   
